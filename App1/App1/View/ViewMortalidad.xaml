<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppInformeGranjas.ViewMortalidad">
    <ScrollView>
        <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="Center" BackgroundColor="#D4E1F4">

            <Label Text="Mortalidad Diaria" HorizontalTextAlignment="Center" FontSize="Title" />
            <Label Text="Fecha(Hoy):"/>
            <DatePicker x:Name="date" />
            <Entry x:Name="editMort" Keyboard="Numeric" Placeholder="Mortalidad" />


            <Button x:Name="btn1" Text="Agregar datos"  />
            <ListView x:Name="lstMort">
                <ListView.ItemTemplate >
                    <DataTemplate >
                        <ViewCell>
                            <StackLayout Orientation="Horizontal">
                                <Label Text="{Binding codigo}"/>
                                <Label Text="{Binding fecha}"/>
                                <Label Text="{Binding granja}"/>
                                <Label Text="{Binding galpon}"/>
                                <Label Text="{Binding mortalidad}"/>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
                
            </ListView>
        </StackLayout>
       
    </ScrollView>
</ContentPage>