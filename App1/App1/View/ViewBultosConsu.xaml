<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppInformeGranjas.View.ViewBultosConsu">
    <ContentPage.Content>
        <StackLayout BackgroundColor="#D4E1F4">
            <Label Text="Bultos consumidos por día" HorizontalTextAlignment="Center" FontSize="Title" />
            <Label Text="Fecha(Hoy):"/>
            <DatePicker x:Name="date" />
            <Entry x:Name="editbultos" Keyboard="Numeric" Placeholder="Numero de bultos hoy" />
            <Button x:Name="btn1" Text="Agregar datos" />
            

        </StackLayout>
    </ContentPage.Content>
</ContentPage>